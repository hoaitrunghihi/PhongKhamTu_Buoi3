@model ProductModel
@{
    ViewData["Title"]="Create product";
}

<h1>@ViewData["Title"]</h1>
<hr/>
<div class="row">
    <div class ="col-md-10">
        <form asp-action="Create" asp-controller="Product" method="post" enctype="multypart/form-data">
            <div class="form-group row"
                <label asp-for="ProductName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductName" class="form control">
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
             <div class="form-group row"
                <label asp-for="ProductQuanlity" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductQuanlity" class="form control">
                </div>
                <span asp-validation-for="ProductQuanlity" class="text-danger"></span>
            </div>
             <div class="form-group row"
                <label asp-for="ProductPrice" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductPrice" class="form control">
                </div>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
             <div class="form-group row"
                <label asp-for="Descriptions" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Descriptions" class="form control">
                </div>
                <span asp-validation-for="Descriptions" class="text-danger"></span>
            </div>
             <div class="form-group row"
                <label class="col-sm-3 col-form-label">Image </label>
                <div class="col-sm-6">
                    <input class="form control" type="file" name="photo">
                </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>