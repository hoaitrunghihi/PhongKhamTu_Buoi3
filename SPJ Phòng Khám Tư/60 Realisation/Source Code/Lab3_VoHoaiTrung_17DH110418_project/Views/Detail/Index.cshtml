@model ProductModel
@{
    ViewData["Title"]="Detail";
}
<h1>@ViewData["Title"]</h1>
<div>
    <h4>ProductModel</h4>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <dl class="row">
                <dt class="col-sm-2">
                    <label asp-for="ProductName"></label>
                </dt>
                <dd class="col-sm-10">
                    @Model.ProductName
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="ProductPrice"></label>
                </dt>
                <dd class="col-sm-10">
                    @Model.ProductPrice
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="Descriptions"></label>
                </dt>
                <dd class="col-sm-10">
                    @Model.Descriptions
                </dd>
            </dl>
        </div>
        <div class =" col-sm-4">
            <img src="~/images/@Model.ProductImage" width = "100" height="100" atl="image"/>
        </div>
    </div>
</div>
<div> 
    <a asp-action="Index" asp-controller="Product">Back to List</a>
</div>    
